<%= form_for comment, remote: true, authenticity_token: true do |f| %>
  <div class="row">
    <div class="col-md-10">
      <%= f.text_field :body, class: "form-control" %>
      <%= f.hidden_field :product_id, value: product.id %>
      <%= f.hidden_field :actual_user, value: current_user.id %>
    </div>
    <div class="col-md-2">
      <%= f.submit "send", class: "float-right btn btn-primary btn-block" %>
    </div>
  </div>
<% end %>
<input type="hidden" id="user_name" value="<%= current_user.email %>">
