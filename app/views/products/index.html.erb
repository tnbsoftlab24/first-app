<div class="container">
    <div class=row>   
        <div class="col col-md-8 offset-md-2 my-4">
            <h1 class="text-center">Products</h1>
            <h1 class="text-center"> <%= @title%> </h1>
            <table class="table">
            <thead>
                <tr>
                <th>Name</th>
                <th>Description</th>
                <th colspan="3"></th>
                </tr>
            </thead>
            <tbody>
                <% current_user.products.each do |product| %>
                <tr>
                    <td><%= product.name %></td>
                    <td><%= product.description %></td>
                    <td><%= link_to 'Show', product ,:class => "btn btn-success text-white"%></td>
                    <td><%= link_to 'Edit', edit_product_path(product),:class => "btn btn-warning text-white"%></td>
                    <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' },:class => "btn btn-danger text-white" %></td>
                </tr>
                <% end %>
            </tbody>
            </table>
            <br>
            <%= link_to 'Nouveau Produit', new_product_path,:class => "btn btn-primary text-white" %>
        </div>
    </div>
</div>

