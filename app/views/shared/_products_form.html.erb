<%= form_with(model: @product, local: true) do |form| %>

 <div class="form-group">
  <div class="field">
    <%=  form.label :name %>
    <%=  form.text_field :name,class:'form-control my-2', id: :product_name %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%=  form.text_field :description,class:'form-control my-2', id: :product_description %>
  </div>

  <div class="form-group">
    <%= form.label :shop %>
    <%= form.collection_select :shop_id, Shop.all, :id ,:name,{prompt: "Select a shop"}, {class: "form-control"}%>
  </div>

  <div class="actions">
    <%= form.submit class:'btn btn-primary my-2'%>
  </div>
</div>
<% end %>