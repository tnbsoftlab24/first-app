<%= form_with(model: @shop, local: true) do |form| %>

 <div class="form-group">
  <div class="field">
    <%=  form.label :name %>
    <%=  form.text_field :name,class:'form-control my-2', id: :shop_name %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%=  form.text_field :description,class:'form-control my-2', id: :shop_description %>
  </div>


  <div class="actions">
    <%= form.submit class:'btn btn-primary my-2'%>
  </div>
</div>
<% end %>